<%- model_class = Event -%>
<%= render 'nav' %>

<table class="table table-bordered table-striped">
  <thead>
  <tr>
    <th class="offer-id"><%= model_class.human_attribute_name(:req) %>#</th>
    <th class="offer-date"><%= model_class.human_attribute_name(:date) %></th>
    <th class="offer-title"><%= model_class.human_attribute_name(:title) %></th>
    <th class="offer-submitter"><%= model_class.human_attribute_name(:submitter) %></th>
    <th class="offer-status"><%= model_class.human_attribute_name(:status) %></th>
    <th class="offer-actions"><%= t(:actions) %></th>
  </tr>

  </thead>
  <tbody>
  <% @items.each do |offer| %>
    <tr>
      <td class="offer-id"><%= link_to offer.booking_request.id, offer.booking_request %></td>
      <td class="offer-date"><%= offer.event_rooms.first.start_at %></td>
      <td class="offer-title"><%= offer.name %></td>
      <td class="offer-submitter"><%= offer.booking_request.submitter.name %></td>
      <td class="offer-status">

        <%= t(:".status.#{offer.status}") %>

      </td>
      <td class="offer-actions">

      </td>

    </tr>
  <% end %>
  </tbody>

</table>