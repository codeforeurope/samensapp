<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :start_at %>
    <%= f.input :end_at %>
    <%= f.association :booking_request %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
