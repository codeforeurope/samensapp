<%= simple_form_for resource do |f| %>
  <div class="row-fluid">

    <div class="original-image">
      <h4><%= t '.crop_image' %></h4>
      <% if resource.kind_of?(Array) %>
        <%= image_tag resource[1].image_url, id: "cropbox" %>
      <% else %>
        <%= image_tag resource.image_url, id: "cropbox" %>
      <% end %>
    </div>

    <div class="preview-image">
      <h4><%= t '.preview' %></h4>

      <div style="width:285px; height:190px; overflow:hidden; ">
        <% if resource.kind_of?(Array) %>
          <%= image_tag resource[1].image_url, id: "preview" %>
        <% else %>
          <%= image_tag resource.image_url, id: "preview" %>
        <% end %>
      </div>
      <div class="form-actions">
        <%= f.submit t(:crop), :class => "btn btn-primary" %>
      </div>
    </div>
  </div>

  <% %w[x y w h].each do |attribute| %>
    <%= f.hidden_field "crop_#{attribute}" %>
  <% end %>

<% end %>