<%- model_class = Building -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<%= gmaps("map_options" => {"zoom" => 6}, "markers" => {"data" => @json, "options" => {"do_clustering" => true}}) %>


<% content_for :scripts do %>
  <script type="text/javascript">
    Gmaps.map.callback = function() {
     //your code
      $(document).trigger('map:ready');
    }
  </script>
<% end %>

<br/>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:name) %></th>
    <th><%= model_class.human_attribute_name(:address) %></th>
    <th><%= model_class.human_attribute_name(:open_from) %></th>
    <th><%= model_class.human_attribute_name(:open_to) %></th>
    <th>
      <% if can? :manage, Building or can? :delete, Building %>
        <%= t '.actions', :default => t("helpers.actions") %>
      <% end %></th>
  </tr>
  </thead>
  <tbody>
  <% @buildings.each do |building| %>
    <tr>
      <td><%= link_to building.name, building_path(building) %></td>
      <td><%= building.address %></td>
      <td><%= l building.open_from, :format => :hour_minute unless building.open_from.nil? %></td>
      <td><%= l building.open_to, :format => :hour_minute unless building.open_to.nil? %></td>
      <td>
        <%= link_to t('visit'),
                    rooms_path(:building_id => building.id),  :class => 'btn btn-mini' %>
        <% if can? :manage, building %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_building_path(building), :class => 'btn btn-mini' %>
        <% end %>
        <% if can? :delete, building %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      building_path(building),
                      :method => :delete,
                      :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                      :class => 'btn btn-mini btn-danger' %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<% if can? :create, Building %>
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_building_path,
              :class => 'btn btn-primary' %>
<% end %>