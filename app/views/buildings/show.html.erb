<%- model_class = Building -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <div class="row">
    <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
    <dd><%= @building.name %></dd>
  </div>
  <div class="row">
    <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
    <dd><%= @building.description %></dd>
  </div>
  <div class="row">
    <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
    <dd><%= @building.address %></dd>
  </div>
  <div class="row">
    <dt><strong><%= model_class.human_attribute_name(:organization) %>:</strong></dt>
    <dd><%= link_to  @organization.name, organization_url(@organization.id) unless @organization.nil? %></dd>
  </div>
  <div class="row">
    <dt><strong><%= model_class.human_attribute_name(:open_from) %>:</strong></dt>
    <dd><%= l @building.open_from, :format => :hour_minute unless @building.open_from.nil? %></dd>
  </div>
  <div class="row">
    <dt><strong><%= model_class.human_attribute_name(:open_to) %>:</strong></dt>
    <dd><%= l @building.open_to, :format => :hour_minute unless @building.open_to.nil? %></dd>
  </div>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              buildings_path, :class => 'btn' %>
  <% if can? :manage, @building %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_building_path(@building), :class => 'btn' %>
  <% end %>
  <% if can? :delete, @building %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                building_path(@building),
                :method => 'delete',
                :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                :class => 'btn btn-danger' %>
  <% end %>
</div>
