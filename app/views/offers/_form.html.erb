<ul class="breadcrumb">
  <li><%= link_to t(:requests), booking_requests_path %> <span class="divider">/</span></li>
  <li><%= link_to t(:request_50), booking_request_path(@booking_request) %> <span class="divider">/</span></li>
  <li class="active"><%= t(:'make_offer') %></li>
</ul>


<%- model_class = BookingRequest -%>
<%- submitter_class = User -%>
<div class="tabbable request-header">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#summary" data-toggle="tab"><%= t('.booking_request_summary') %></a>
    </li>
    <li><a href="#description" data-toggle="tab"><%= model_class.human_attribute_name(:description) %></a>
    </li>
    <li><a href="#time" data-toggle="tab"><%= model_class.human_attribute_name(:event_date) %></a>
    </li>
    <li><a href="#catering_needs" data-toggle="tab"><%= model_class.human_attribute_name(:catering_needs) %></a>
    </li>
    <li><a href="#equipment_needs" data-toggle="tab"><%= model_class.human_attribute_name(:equipment_needs) %></a>
    </li>
    <li><a href="#notes" data-toggle="tab"><%= model_class.human_attribute_name(:notes) %></a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="summary">

      <!-- table req summary start -->
      <table>
        <tbody>
        <tr>
          <td><strong><%= model_class.human_attribute_name(:company_name) %>:</strong></td>
          <td><%= @booking_request.company_name %></td>
          <td><strong><%= model_class.human_attribute_name(:contact_email) %>:</strong></td>
          <td><%= @booking_request.contact_email %></td>
        </tr>
        <tr>
          <td><strong><%= model_class.human_attribute_name(:contact_phone) %>:</strong></td>
          <td><%= @booking_request.contact_phone %></td>
          <td><strong><%= model_class.human_attribute_name(:company_address) %>:</strong></td>
          <td>
            <address><%= @booking_request.company_address %></address>
          </td>
        </tr>
        </tbody>
      </table>
      <!-- table req summary end -->

    </div>
    <div class="tab-pane" id="time">
      <div class="row">
        <div class="span4">
          <dl class="dl-horizontal">
            <dt><%= model_class.human_attribute_name(:event_date) %></dt>
            <dd><%= @booking_request.event_date %></dd>
            <dt><%= model_class.human_attribute_name(:start_time) %></dt>
            <dd><%= @booking_request.start_time %></dd>
          </dl>
        </div>
        <div class="span4">
          <dl class="dl-horizontal">
            <dt><%= model_class.human_attribute_name(:start_time) %></dt>
            <dd><%= @booking_request.start_time %></dd>
            <dt><%= model_class.human_attribute_name(:people) %></dt>
            <dd><%= @booking_request.people %></dd>
          </dl>
        </div>
      </div>


    </div>
    <div class="tab-pane" id="description"><%= @booking_request.description %></div>
    <div class="tab-pane" id="catering_needs"><%= @booking_request.catering_needs %></div>
    <div class="tab-pane" id="equipment_needs"><%= @booking_request.equipment_needs %></div>
    <div class="tab-pane" id="notes"><%= @booking_request.notes %></div>
  </div>
</div>
<%= simple_form_for @event, :url => booking_request_offer_path(@booking_request), :html => {:data => {:"hour-block" => 4}} do |f| %>
  <div class="event-details">
    <h4><%= t(:".details") %>     </h4>
    <%= f.input :name %>
  </div>

  <div class="select-room">
    <h4><%= t(:".rooms") %>

      <%= link_to_add_fields t(:add_room), f, :event_rooms, :class => "add-room btn btn-mini btn-success pull-right" %>
    </h4>

    <div id="rooms-container">
      <%= f.simple_fields_for(:event_rooms) do |g| %>
        <%= render 'event_room_fields', :f => g %>
      <% end %>

    </div>
    <div class="sub-totals">
      <%= f.input :room_total, :as => :currency, :wrapper_html => {:class => "pull-right"}, :input_html => {:disabled => true} %>
    </div>

  </div>
  <div id="extras-container">
    <h4><%= t(:".extra_charges") %> <%= link_to_add_fields t(:add_charge), f, :event_charges, :class => "add-charge btn btn-mini btn-success pull-right" %> </h4>
    <table class="table table-striped table-bordered table-hover<%= " hidden" if @event.event_charges.empty? %>">
      <thead>
      <tr>
        <th><%= t(:".items") %></th>
        <th><%= t(:".price") %></th>
        <th><%= t(:".units") %></th>
        <th><%= t(:".item_total") %></th>

      </tr>
      </thead>
      <tbody>
      <%= f.simple_fields_for(:event_charges) do |g| %>
        <%= render 'event_charge_fields', :f => g %>

      <% end %>
      </tbody>
    </table>
    <div class="sub-totals">
      <%= f.input :extras_total, :as => :currency, :wrapper_html => {:class => "pull-right"}, :input_html => {:disabled => true} %>
    </div>
  </div>
  <hr>
  <div class="sub-totals">
    <%= f.input :grand_total, :as => :currency, :wrapper_html => {:class => "pull-right"}, :input_html => {:disabled => true} %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary', :value => t(:".make_offer") %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                booking_requests_path, :class => 'btn' %>
  </div>
<% end %>