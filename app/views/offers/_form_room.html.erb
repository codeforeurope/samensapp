
<%= f.fields_for(:event_rooms) do |g| %>
<div class="control-group" id="building-control-group">
  <%= select_tag :building, options_from_collection_for_select(@buildings, "id", "name"), :prompt => t(:'.select_building'), :class => "building-select" %>
</div>
<div class="control-group">
  <%= render partial: 'booking_requests/offer/rooms', locals: {building_id: nil, :f => g} %>
  <span class="help-block">Select a room to fit the desired number of people</span>
  <span id="room-price" data-room-id=""></span>
</div>
<div>
  <div class="input-prepend bootstrap-datepicker-component date">
    <div class="add-on"><i class="icon-calendar"></i></div>
    <%= g.text_field :event_date, :value => @booking_request.event_date, :class => "" %>
  </div>
</div>
<div>
  <div class="input-prepend bootstrap-timepicker-component">
    <div class="add-on"><i class="icon-time"></i></div>
    <%= g.text_field :start_time, :value => @booking_request.start_time, :class => "" %>
  </div>
</div>
<div>
  <div class="input-prepend bootstrap-timepicker-component">
    <div class="add-on"><i class="icon-time"></i></div>
    <%= g.text_field :end_time, :value => @booking_request.end_time, :class => "" %>
  </div>
</div>
<% end %>