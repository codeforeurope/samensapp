<%- model_class = BookingRequest -%>
<%- submitter_class = User -%>
<%- building_class = Building -%>
<div class="page-header">
  <% if can? :make_offer, @booking_request %>
    <%=  link_to t('.make_offer'), new_booking_request_offer_path(@booking_request), :class => 'pull-right btn btn-primary' %>
  <% end %>
  <h1><%= t :'.title', :default => [:'helpers.titles.show', '%{model}'], :model => model_class.model_name.human %>
    #<%= @booking_request.id %></h1>

</div>
<div class="row">
  <div class="span5">
    <fieldset>
      <legend><%= t :'.my_info' %></legend>
      <table>
        <tbody>
        <tr>
          <td><strong><%= submitter_class.human_attribute_name(:name) %>:</strong></td>
          <td><%= @booking_request.submitter.name %></td>
        </tr>
        <tr>
          <td><strong><%= submitter_class.human_attribute_name(:email) %>:</strong></td>
          <td><%= @booking_request.submitter.email %></td>
        </tr>
        <tr>
          <td><strong><%= submitter_class.human_attribute_name(:phone) %>:</strong></td>
          <td><%= @booking_request.submitter.phone %></td>
        </tr>
        <tr>
          <td><strong><%= submitter_class.human_attribute_name(:mobile_phone) %>:</strong></td>
          <td><%= @booking_request.submitter.mobile_phone %></td>
        </tr>
        <tr>
          <td><strong><%= submitter_class.human_attribute_name(:address) %>:</strong></td>
          <td>
            <address><%= @booking_request.submitter.address %></address>
          </td>
        </tr>
        </tbody>
      </table>

    </fieldset>
  </div>
  <div class="span5">

    <fieldset>
      <legend><%= t :'.company_info' %></legend>
      <table>
        <tbody>
        <tr>
          <td><strong><%= model_class.human_attribute_name(:company_name) %>:</strong></td>
          <td><%= @booking_request.company_name %></td>
        </tr>
        <tr>
          <td><strong><%= model_class.human_attribute_name(:contact_email) %>:</strong></td>
          <td><%= @booking_request.contact_email %></td>
        </tr>
        <tr>
          <td><strong><%= model_class.human_attribute_name(:contact_phone) %>:</strong></td>
          <td><%= @booking_request.contact_phone %></td>
        </tr>
        <tr>
          <td><strong><%= model_class.human_attribute_name(:website) %>:</strong></td>
          <td><%= @booking_request.website%></td>
        </tr>
        <tr>
          <td><strong><%= model_class.human_attribute_name(:company_address) %>:</strong></td>
          <td>
            <address><%= @booking_request.company_address %></address>
          </td>
        </tr>
        </tbody>
      </table>

    </fieldset>
  </div>
</div>
<div class="row">
  <div class="span10">
    <fieldset>
      <legend><%= t :'.event_details' %></legend>
      <div class="row">
        <div class="span5">
          <dl class="dl-horizontal">
            <dt><strong><%= "#{building_class.model_name.human} #{building_class.human_attribute_name(:name)}" %>:</strong></dt>
            <dd><%= @booking_request.building.name %></dd>
            <dt><strong><%= model_class.human_attribute_name(:event_date) %>:</strong></dt>
            <dd><%= @booking_request.event_date %></dd>
            <dt><strong><%= model_class.human_attribute_name(:people) %>:</strong></dt>
            <dd><%= @booking_request.people %></dd>
          </dl>
        </div>
        <div class="span4">
          <dl class="dl-horizontal">
            <dt><strong><%= model_class.human_attribute_name(:start_time) %>:</strong></dt>
            <dd><%= @booking_request.start_time %></dd>
            <dt><strong><%= model_class.human_attribute_name(:end_time) %>:</strong></dt>
            <dd><%= @booking_request.end_time %></dd>
          </dl>
        </div>

      </div>

      <div class="row">
        <div class="span9 text-areas">
          <dl>
            <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
            <dd><%= @booking_request.description %></dd>
            <dt><strong><%= model_class.human_attribute_name(:catering_needs) %>:</strong></dt>
            <dd><%= @booking_request.catering_needs %></dd>
            <dt><strong><%= model_class.human_attribute_name(:equipment_needs) %>:</strong></dt>
            <dd><%= @booking_request.equipment_needs %></dd>
            <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
            <dd><%= @booking_request.notes %></dd>
          </dl>

        </div>
      </div>
    </fieldset>
  </div>
</div>