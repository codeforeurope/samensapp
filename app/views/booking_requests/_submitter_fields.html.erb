<fieldset>
  <%= f.text_field :name %>
  <%= f.email_field :email %>
  <%= f.text_field :phone, :type => "tel" %>
  <%= f.text_field :mobile_phone, :type => "tel" %>
  <%= f.text_area :address %>
  <%= f.check_box :create_account %>

  <%= f.password_field :password, :wrapper_class => "hidden" %>
  <%= f.password_field :password_confirmation, :wrapper_class => "hidden" %>
</fieldset>