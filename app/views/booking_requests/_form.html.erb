<div class="row">
  <div class="span6">


    <%= simple_form_for(@booking_request, :html => {class: 'form-horizontal'}) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.simple_fields_for :submitter, @booking_request.submitter do |b| %>
          <% if !signed_in? %>
            <%= render 'submitter_fields', f: b %>
          <% else %>
            <%= render 'submitter_info', f: b %>
          <% end %>
        <% end %>
        <fieldset>
          <legend><%= t :organization_info %></legend>
          <div class="control-group">
            <div class="controls copy">
              <%= label_tag :copy_personal_info, :copy_personal_info, :class => "checkbox" do %>
                <%= check_box_tag :copy_personal_info %> <%= t :copy_personal_info %>
              <% end %>
            </div>

          </div>

          <%= f.input :organization_name %>
          <%= f.input :contact_person %>
          <%= f.input :contact_email %>
          <%= f.input :contact_phone, :type => "tel" %>
          <%= f.input :organization_address, :input_html => {:rows => 5, :cols => 60} %>
        </fieldset>
        <fieldset>
          <legend><%= t :event_details %></legend>
          <%= f.input :start_time, :as => :string, :class => "datepicker" %>
          <%= f.input :end_time, :as => :string, :class => "datepicker" %>
          <%= f.input :people %>
          <%= f.input :description, :input_html => {:rows => 5, :cols => 60} %>
          <%= f.input :catering_needs, :input_html => {:rows => 5, :cols => 60} %>
          <%= f.input :equipment_needs, :input_html => {:rows => 5, :cols => 60} %>
          <%= f.input :notes, :input_html => {:rows => 5, :cols => 60} %>
        </fieldset>
      </div>

      <div class="form-actions">
        <%= f.button :submit, :class => 'btn-primary' %>
        <%= link_to 'Back', root_path, :class => 'btn' %>
      </div>

    <% end %>
  </div>
</div>