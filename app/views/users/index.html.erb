<h1>Listing users</h1>

<table>
  <tr>
    <th><%= label @user, :name %></th>
    <th><%= label @user, :email %></th>
    <th><%= label @user, :organization %></th>
    <th><%= %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.organization.name unless user.organization.nil? %></td>

        <td><%= link_to :Show, user %></td>
      <% if can? :update, user %>
        <td><%= link_to :Edit, edit_user_path(user) %></td>
      <% end %>
      <% if can? :delete, user %>
        <td><%= link_to :Destroy, user, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<br/>

<% if can? :create, User %>
  <%= link_to :New_User, new_user_path %>
<% end %>
