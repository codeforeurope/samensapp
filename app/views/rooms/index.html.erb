<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Floor</th>
    <th>Base price</th>
    <th>Blind price</th>
    <th>Capacity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.name %></td>
    <td><%= room.floor %></td>
    <td><%= room.base_price %></td>
    <td><%= room.blind_price %></td>
    <td><%= room.capacity %></td>
    <td><%= link_to 'Show', room %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

