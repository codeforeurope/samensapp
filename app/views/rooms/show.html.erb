<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @room.name %>
</p>

<p>
  <b>Floor:</b>
  <%= @room.floor %>
</p>

<p>
  <b>Base price:</b>
  <%= @room.base_price %>
</p>

<p>
  <b>Blind price:</b>
  <%= @room.blind_price %>
</p>

<p>
  <b>Capacity:</b>
  <%= @room.capacity %>
</p>


<p>
  <% for picture in @room.pictures %>
    <div>
      <%= image_tag picture.image_url(:thumb) if picture.image? %>
      <div><%= picture.description %></div>
      <div>
        <%= link_to "remove", picture, :confirm => 'Are you sure?', :method => :delete %>
      </div>
    </div>
  <% end %>
</p>


<%= link_to 'Edit', edit_room_path(@room) %> |
<%= link_to 'Back', rooms_path %>
