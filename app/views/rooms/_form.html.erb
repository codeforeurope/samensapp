<%= simple_form_for @room, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :floor %>
  <%= f.input :base_price %>
  <%= f.input :blind_price %>
  <%= f.input :capacity %>
  <%= f.input :description, :input_html => {:rows => 5, :placeholder => "Enter a description."} %>
  <%= f.input :notes, :input_html => {:rows => 5, :placeholder => "Enter some notes."} %>
  <%= f.input :cleaning_fee %>
  <%= f.input :building_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                rooms_path, :class => 'btn' %>
  </div>
<% end %>
