<!DOCTYPE html>
<html>
<head>
  <title>Indische Buurt</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag "application", :media => "all" %>

  <%= csrf_meta_tags %>

</head>
<body>

<div id="wrap">

  <!-- Fixed navbar -->
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="/"><%= t('navbar.company_name') %></a>

        <div class="container nav-collapse">
          <ul class="nav">
            <li><%= link_to t('navbar.submit_request'), new_booking_request_path, :class => current_page?(:controller => "/booking_requests") ? "active" : "" %></li>
            <% if user_signed_in? %>
              <% if cannot? :manage, Room %>
                <li><%= link_to t('navbar.rooms'), rooms_path, :class => current_page?(:controller => "/rooms") ? "active" : "" %></li>
              <% else %>
                <li><%= link_to t('navbar.manage_rooms'), rooms_path, :class => current_page?(:controller => "/rooms") ? "active" : "" %></li>
              <% end %>
              <li><%= link_to t('navbar.buildings'), buildings_path, :class => current_page?(:controller => "/buildings") ? "active" : "" %></li>
              <% if can? :manage, BookingRequest %>
                <li><%= link_to t('navbar.manage_bookings'), booking_requests_path, :class => current_page?(:controller => "/booking_requests") ? "active" : ""  %></li>
                <% else %>
                <li><%= link_to t('navbar.view_bookings'), booking_requests_path, :class => current_page?(:controller => "/booking_requests") ? "active" : ""  %></li>
              <% end %>
            <% end %>
          </ul>
          <ul class="nav pull-right">
            <% if user_signed_in? %>
              <li><span class="user-email"><%= t('navbar.logged_in_as') + " " + current_user.email %></span></li>

              <li><%= link_to t('navbar.profile'), "/users/profile" %></li>
              <li class="divider"></li>
              <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>

            <% else %>
              <li><%= link_to "Log In", new_user_session_path %></li>
              <li><%= link_to "Register", new_user_registration_path, :class => "last" %></li>
            <% end %>
          </ul>
        </div>
        <!--/.nav-collapse -->
      </div>
    </div>
  </div>

  <!-- Begin page content -->
  <div class="container">
    <% flash.each do |name, msg| %>
      <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
        <a class="close" data-dismiss="alert">Ã—</a>
        <%= msg %>
      </div>
    <% end %>
    <%= yield %>
  </div>

  <div id="push"></div>
</div>

<!-- /container -->

<div id="footer">
  <div class="container">
    <p class="muted credit">&copy; <%= Time.now().strftime("%Y") %> Code for Europe. </p>
  </div>
</div>

<!-- Javascripts
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<%= javascript_include_tag "application" %>
<%= yield :scripts %>
</body>
</html>
